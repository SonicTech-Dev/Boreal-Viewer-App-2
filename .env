# MQTT broker
MQTT_URL=mqtt://3.227.99.254:1883

# Data topics (two data topics used by the backend)
MQTT_TOPIC_2=BivicomData2
MQTT_TOPIC_3=BivicomData3

# Topic -> serial mapping (Option A)
# These tell server which device serial to inject when the incoming MQTT payload
# doesn't include a serial. Set them to the exact serial strings used by your devices.
MQTT_TOPIC_2_SERIAL=B452A25032102
MQTT_TOPIC_3_SERIAL=B452A25032103

# Optional: modbus/gsm signal topic (forwarded as 'signal' to frontend)
MODBUS_TOPIC=modbus/gsm_signal

# MQTT auth (if required)
#MQTT_USERNAME=
#MQTT_PASSWORD=

# Server port
PORT=3005

# Postgres (match server's expected PG_* env names)
PG_HOST=3.227.99.254
PG_PORT=5432
PG_DATABASE=boreal_web_viewer
PG_USER=postgres
PG_PASSWORD=Sonic@123

# Keep the DATABASE_URL for tools that expect it
DATABASE_URL=postgres://postgres:Sonic@123@3.227.99.254:5432/boreal_web_viewer

# Toggle saving incoming LOS messages to DB (1 = enabled, 0 = disabled)
SAVE_MQTT_TO_DB=1

# Notification cooldown (seconds) per device serial
NOTIFY_COOLDOWN_SECS=60

# Device ping settings (multi-attempt)
PING_INTERVAL_MS=30000
PING_ATTEMPTS=3
PING_TIMEOUT_SECONDS=5
PING_DELAY_BETWEEN_MS=5000
